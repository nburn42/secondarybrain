# Example environment file for tandembrain
# Copy this to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://tandembrain_app:YOUR_DB_APP_PASSWORD@127.0.0.1:5432/tandembrain
POSTGRES_ADMIN_PASSWORD=YOUR_POSTGRES_ADMIN_PASSWORD
DB_APP_PASSWORD=YOUR_DB_APP_PASSWORD

# Google Cloud
GOOGLE_CLOUD_PROJECT=neuronotify
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/service-account.json
GOOGLE_CLOUD_API_KEY=YOUR_GOOGLE_CLOUD_API_KEY

# Application Configuration
NODE_ENV=production
PORT=3000
JWT_SECRET=YOUR_JWT_SECRET

# External APIs
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY

# Firebase Configuration (for client-side)
# Get these values from Firebase Console > Project Settings > General > Your apps
# Use the Web API Key from Firebase Console (format: AIzaSy...)
VITE_FIREBASE_API_KEY=YOUR_FIREBASE_WEB_API_KEY
VITE_FIREBASE_AUTH_DOMAIN=neuronotify.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=neuronotify
VITE_FIREBASE_STORAGE_BUCKET=neuronotify.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=YOUR_FIREBASE_MESSAGING_SENDER_ID
VITE_FIREBASE_APP_ID=YOUR_FIREBASE_APP_ID

# Firebase Admin (for server-side)
FIREBASE_PROJECT_ID=neuronotify

# Cloud SQL Instance Details (for reference)
CLOUD_SQL_INSTANCE_NAME=tandembrain-db
CLOUD_SQL_CONNECTION_NAME=neuronotify:us-west2:tandembrain-db
CLOUD_SQL_PUBLIC_IP=34.102.18.89